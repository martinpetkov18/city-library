<mvc:View id="myMainView" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" controllerName="application.webapp.controller.MainView">
    <Panel>
        <Label text="Register a new reader"></Label>
        <Input id="readerName" placeholder="Enter reader's name"></Input>
        <Button text="Register" press="onRegisterReader"></Button>
    </Panel>

    <Panel>
        <Label text="All Registered Readers"></Label>
        <List id="readersList" items="{/Readers}">
            <StandardListItem title="{name}"></StandardListItem>
        </List>
    </Panel>

    <Panel>
        <Label text="Add a new book"></Label>
        <Input id="bookTitle" placeholder="Enter book's title"></Input>
        <Input id="bookAuthor" placeholder="Enter book's author"></Input>
        <Button text="Add Book" press="onAddBook"></Button>
    </Panel>

    <Panel>
        <Label text="Library Catalog"></Label>
        <List id="booksList" items="{/Books}">
            <StandardListItem title="{id/title}" description="{id/author}" info="{availableQuantity}"></StandardListItem>
        </List>
    </Panel>

    <Panel>
        <Label text="Search Books"></Label>
        <RadioButtonGroup id="searchType" selectedIndex="0">
            <buttons>
                <RadioButton text="Title" selected="true"/>
                <RadioButton text="Author" />
            </buttons>
        </RadioButtonGroup>
        <SearchField id="searchField" search="onSearchBooks"></SearchField>
        <List id="searchResultsList" items="{path: '/SearchResults'}">
            <StandardListItem title="{Title}" description="{Author}"></StandardListItem>
        </List>
    </Panel>

    <Panel>
        <Label text="Borrow a book"></Label>
        <Input id="borrowerName" placeholder="Enter reader's name"></Input>
        <Input id="borrowerBookTitle" placeholder="Enter book's title"></Input>
        <Button text="Borrow Book" press="onBorrowBook"></Button>
    </Panel>

    <Panel>
        <Label text="Return a book"></Label>
        <Input id="returningReaderName" placeholder="Enter reader's name"></Input>
        <Input id="returningBookTitle" placeholder="Enter book's title"></Input>
        <Button text="Return Book" press="onReturnBook"></Button>
    </Panel>

    <Panel>
        <Label text="Change Language"></Label>
        <Select id="languageSelect" change="onChangeLanguage">
            <items>
                <core:ListItem key="en" text="English" />
                <core:ListItem key="bg" text="Bulgarian" />
            </items>
        </Select>
    </Panel>
</mvc:View>