<mvc:View id="myMainView" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" controllerName="application.webapp.controller.MainView">
    <Panel>
        <Label text="{i18n>registerNewReader}"></Label>
        <Input id="readerName" placeholder="{i18n>enterReaderName}"></Input>
        <Button text="{i18n>register}" press="onRegisterReader"></Button>
    </Panel>

    <Panel>
        <Label text="{i18n>allRegisteredReaders}"></Label>
        <List growing="true" id="readersList" items="{/Readers}">
            <StandardListItem title="{name}"></StandardListItem>
        </List>
    </Panel>

    <Panel>
        <Label text="{i18n>addNewBook}"></Label>
        <Input id="bookTitle" placeholder="{i18n>enterBookTitle}"></Input>
        <Input id="bookAuthor" placeholder="{i18n>enterBookAuthor}"></Input>
        <Button text="{i18n>addBook}" press="onAddBook"></Button>
    </Panel>

    <Panel>
        <Label text="{i18n>libraryCatalog}"></Label>
        <List growing="true" id="booksList" items="{/Books}">
            <StandardListItem title="{id/title}" description="{id/author}" info="{availableQuantity}"></StandardListItem>
        </List>
    </Panel>

    <Panel>
        <Label text="{i18n>searchBooks}"></Label>
        <RadioButtonGroup id="searchType" selectedIndex="0">
            <buttons>
                <RadioButton text="{i18n>title}" selected="true"/>
                <RadioButton text="{i18n>author}"/>
            </buttons>
        </RadioButtonGroup>
        <SearchField id="searchField" search="onSearchBooks"></SearchField>
        <List growing="true" id="searchResultsList" items="{/SearchResults}">
            <StandardListItem title="{id/title}" description="{id/author}" info="{availableQuantity}"></StandardListItem>
        </List>
    </Panel>

    <Panel>
        <Label text="{i18n>borrowBook}"></Label>
        <Input id="borrowerName" placeholder="{i18n>enterBorrowerName}"></Input>
        <Input id="borrowerBookTitle" placeholder="{i18n>enterBorrowerBookTitle}"></Input>
        <Button text="{i18n>borrowBook}" press="onBorrowBook"></Button>
    </Panel>

    <Panel>
        <Label text="{i18n>returnBook}"></Label>
        <Input id="returningReaderName" placeholder="{i18n>enterReturningReaderName}"></Input>
        <Input id="returningBookTitle" placeholder="{i18n>enterReturningBookTitle}"></Input>
        <Button text="{i18n>returnBook}" press="onReturnBook"></Button>
    </Panel>

    <Panel>
        <Label text="{i18n>changeLanguage}"></Label>
        <Select id="languageSelect" change="onChangeLanguage">
            <items>
                <core:ListItem key="en" text="{i18n>english}" />
                <core:ListItem key="bg" text="{i18n>bulgarian}" />
            </items>
        </Select>
    </Panel>
</mvc:View>